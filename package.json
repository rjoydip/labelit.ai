{
    "name": "labelit.ai",
    "version": "0.0.1",
    "packageManager": "bun@1.1.3",
    "workspaces": [
        "packages/*",
        "integrations/*"
    ],
    "scripts": {
        "prepare": "husky",
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "typecheck": "turbo run typecheck",
        "update": "turbo run update -- --ignore-scripts --no-progress --no-summary"
    },
    "devDependencies": {
        "knip": "^5.46.2",
        "lint-staged": "^15.5.0",
        "simple-git-hooks": "^2.12.1",
        "turbo": "^2.4.4"
    },
    "simple-git-hooks": {
        "pre-commit": "bun i --ignore-scripts --offline && bunx lint-staged && bun run typecheck",
        "pre-push": "bun run build && bun run test"
    },
    "lint-staged": {
        "*": "bun run lint"
    }
}